{
    "manifest_version": 2,
    "name": "Lichess Keyboard",
    "description": "Use your keyboard to play chess",
    "version": "0.1.0",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lichess.org/*",
                "https://lichess.dev/*",
                "https://mskchess.ru/*"
            ],
            "js": [
                "./code.js"
            ],
            "run_at": "document_start"
        }
    ]
}
